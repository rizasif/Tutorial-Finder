<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
    android:background="@color/app_orange"
    tools:context="riz92.com.tutorialfinder.NavigationDrawerFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_status"
        android:text="@string/default_drawerStatus"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:fontFamily="roboto-condensed"
        android:textAppearance="?android:textAppearanceLarge"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/saved_drawer_listView"
        android:padding="10dp"/>

</LinearLayout>
